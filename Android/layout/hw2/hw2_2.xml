<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/centerText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF0000"
        android:layout_toStartOf="@+id/centerText"
        android:layout_above="@+id/centerText"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF5722"
        android:layout_alignStart="@+id/centerText"
        android:layout_above="@+id/centerText"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FFFF00"
        android:layout_toEndOf="@+id/centerText"
        android:layout_above="@+id/centerText"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#00FF00"
        android:layout_alignBottom="@+id/centerText"
        android:layout_toStartOf="@+id/centerText"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#0000FF"
        android:layout_toEndOf="@+id/centerText"
        android:layout_alignTop="@+id/centerText"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#3F51B5"
        android:layout_below="@+id/centerText"
        android:layout_toStartOf="@+id/centerText"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#673AB7"
        android:layout_below="@+id/centerText"
        android:layout_alignStart="@+id/centerText"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#9C27B0"
        android:layout_below="@+id/centerText"
        android:layout_toEndOf="@+id/centerText"/>

</RelativeLayout>